FROM python:3.11-slim-bookworm

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/code

WORKDIR /code

# Install system deps needed to build packages and PostgreSQL client libs
RUN apt-get update && \
    apt-get install -y --no-install-recommends build-essential libpq-dev && \
    rm -rf /var/lib/apt/lists/*

# Copy requirements files
COPY requirements.txt requirements-dev.txt ./

# Debug: list the copied files to confirm
RUN ls -l requirements*.txt

# Upgrade pip and install all requirements (main + dev)
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir -r requirements-dev.txt

# Copy your entire source code, including src and app folders
COPY ./app /code/app
COPY ./src /code/src

# Expose FastAPI port
EXPOSE 8000

# Default command: run uvicorn dev server with hot reload
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
